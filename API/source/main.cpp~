#include <iostream>
#include "Dr3D_gnuplot_api.hh"

using std::vector;
using drawNS::Point3D; 
using drawNS::APIGnuPlot3D;
using std::cout;
using std::endl;

int main()
{
   std::shared_ptr<drawNS::Draw3DAPI> api(new APIGnuPlot3D(0,10,0,10,0,10,1000));
   vector<vector<Point3D> > figure=vector<vector<Point3D> > {{
	Point3D(0,0,0),Point3D(0,1,0),Point3D(1,1,0)},{
       Point3D(0,0,3),Point3D(0,1,3),Point3D(1,2,4)}};
   api->draw_polyhedron(figure);
   while(1);
}
